            function moveSlide(direction) {
                const maxIndex = totalItems - itemsPerPage; // Số bước tối đa
                slideIndex += direction;
                if (slideIndex < 0) slideIndex = 0;
                if (slideIndex > maxIndex) slideIndex = maxIndex;
                updateSlider();
            }

            function updateSlider() {
                const itemWidth = 100 / itemsPerPage; // Chiều rộng mỗi sản phẩm (%)
                const offset = -slideIndex * itemWidth; // Tính offset dựa trên slideIndex
                slider.style.transform = `translateX(${offset}%)`;
            }

            // Khởi tạo slider
            updateSlider();

