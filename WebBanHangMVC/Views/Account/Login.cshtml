@{
    ViewData["Title"] = "Đăng nhập hoặc Đăng ký";
}

<style>
    .login-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 30px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 0 10px rgba(0,0,0,0.08);
    }

    .login-title {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 1rem;
        text-align: center;
        color: #333;
    }

    .social-btn {
        display: block;
        width: 100%;
        font-weight: bold;
        padding: 10px;
        border-radius: 8px;
        border: none;
        font-size: 1rem;
        transition: background 0.2s ease;
    }

    .btn-google {
        background-color: #db4437;
        color: white;
    }

    .btn-google:hover {
        background-color: #c23321;
    }

    .btn-facebook {
        background-color: #3b5998;
        color: white;
    }

    .btn-facebook:hover {
        background-color: #2d4373;
    }

    .register-form {
        margin-top: 30px;
    }

    .form-label {
        font-weight: 500;
    }

    hr {
        margin: 2rem 0;
    }
</style>

<div class="login-container">
    <div class="login-title">Đăng nhập với mạng xã hội</div>

    <form method="post" asp-action="GoogleLogin" class="mb-3">
        <button type="submit" class="social-btn btn-google">
            <i class="bi bi-google me-2"></i> Đăng nhập bằng Google
        </button>
    </form>

    <form method="post" asp-action="FacebookLogin">
        <button type="submit" class="social-btn btn-facebook">
            <i class="bi bi-facebook me-2"></i> Đăng nhập bằng Facebook
        </button>
    </form>

    <hr />

    <div class="login-title">Hoặc đăng ký tài khoản mới</div>

    <form method="post" asp-action="Register" class="register-form">
        <div class="mb-3">
            <label for="registerEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="registerEmail" name="email" required />
        </div>
        <div class="mb-3">
            <label for="registerPassword" class="form-label">Mật khẩu</label>
            <input type="password" class="form-control" id="registerPassword" name="password" required />
        </div>
        <button type="submit" class="btn btn-success w-100">Đăng ký</button>
    </form>
</div>
